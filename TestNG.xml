<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="TestSuite" parallel="none">

    <test name="IETestCases">

        <parameter name="browser" value="ie"/>

        <classes>
            <class name="RegistrationTests"/>
            <class name="SignInTest"/>
            <class name="PrettyWomenTest"/>
            <class name="PhotosPageTest"/>
            <class name="GiftsTest"/>
            <class name="MainPageTests"/>
            <class name="BlogPageTest"/>

        </classes>
    </test>

    <test name="FirefoxTestCases">

        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="RegistrationTests"/>
            <class name="SignInTest"/>
            <class name="PrettyWomenTest"/>
            <class name="PhotosPageTest"/>
            <class name="GiftsTest"/>
            <class name="MainPageTests"/>
            <class name="BlogPageTest"/>
        </classes>
    </test>
    <test name="ChromeTestCases">
        <parameter name="browser" value="chrome"/>
        <groups>
            <run>
                <exclude name="ie"/>
                <include name="admin"/>
                <include name="user"/>
            </run>
        </groups>

        <classes>
            <class name="RegistrationTests"/>
            <class name="SignInTest"/>
            <class name="PrettyWomenTest">
                <methods>
                    <include name=" .*Random.*"/>
                    <include name=" .*DropDown.*"/>
                    <include name=" .*Search.*"/>
                </methods>
            </class>
            <class name="PhotosPageTest">
                <methods>
                    <include name=" .*Page.*"/>
                    <include name=" .*List.*"/>
                </methods>
            </class>

            <class name="GiftsTest">
                <methods>
                    <include name=" .*Gifts.*"/>
                    <include name=" .*Bestsellers.*"/>
                </methods>

            </class>

            <class name="MainPageTests">
                <methods>
                    <include name=" .*Tabs.*"/>
                    <include name=" .*Links.*"/>
                    <include name=" .*Size.*"/>
                    <include name=" .*Frame.*"/>
                    <include name=" .*Book.*"/>
                    <include name=" .*Discount.*"/>
                    <include name=" .*Header.*"/>
                </methods>

            </class>

            <class name="BlogPageTest">
                <methods>
                    <include name=" .*List.*"/>
                    <include name=" .*Links.*"/>
                </methods>
            </class>

            <class name="ContactUsPageTest">
                <methods>
                    <include name=" .*DropDown.*"/>
                    <include name=" .*Contact.*"/>
                </methods>
            </class>


        </classes>
    </test>
</suite>


